{
  "build": {
    "dockerfile": "../Dockerfile.dev",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/nix:1": {
      "useAttributePath": true,
      "packages": "nixpkgs.neovim, nixpkgs.zoxide, nixpkgs.nushell, nixpkgs.nodejs_23"
    }// ,
    //"ghcr.io/devcontainers/features/nvidia:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "runArgs": [
    "--network=host",
    // "--gpus=all"
  ],
  "workspaceFolder": "/workspace",
  "remoteUser": "roman",
  "mounts": [
    "source=${localWorkspaceFolder},target=/in,type=bind,consistency=cached",
    "source=${localWorkspaceFolder},target=/out,type=bind,consistency=cached",
  ]
}

